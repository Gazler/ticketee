<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <%= render "tags/form" %>


  <div id="files">
    <% number = 0 %>
   <%= render :partial => "assets/form", :locals => { :number => number, :asset => @ticket.assets } %>

  </div>
<%= link_to_remote "Add another file",
  :url => new_asset_path,
  :update => "files",
  :position => "bottom" ,
  :method => :get,
  :with => "'number=' + $$('div#files input').length" %>



  <%= f.submit %>
<% end %>

